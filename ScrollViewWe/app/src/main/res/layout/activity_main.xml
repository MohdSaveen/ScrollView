<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        style="@style/CustomEdittext"
        android:orientation="vertical">
    <EditText
       style="@style/CustomEdittext"
        android:hint="@string/enter_the_name_hint"/>

    <EditText
        style="@style/CustomEdittext"
        android:hint="@string/enter_the_id_hint" />

    <EditText
        style="@style/CustomEdittext"
        android:hint="@string/enter_the_blood_group_here_hint"/>
    <EditText
        style="@style/CustomEdittext"
        android:hint="@string/enter_phone_number_hint"/>
    <EditText
       style="@style/CustomEdittext"
        android:hint="@string/enter_state_hint"/>
    <EditText
      style="@style/CustomEdittext"
        android:hint="@string/enter_district_hint"/>
    <EditText
       style="@style/CustomEdittext"
        android:hint="@string/enter_the_address_hint"/>

    </LinearLayout>
</ScrollView>